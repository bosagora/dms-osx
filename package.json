{
    "name": "payment-contract-boa",
    "version": "1.0.0",
    "description": "Contracts for payment systems used in BOA Layer 2",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "test": "node_modules/.bin/hardhat test",
        "clean": "node_modules/.bin/hardhat clean",
        "build": "node_modules/.bin/hardhat compile",
        "deploy:hardhat": "npx hardhat deploy",
        "deploy:mainnet": "npx hardhat deploy --network mainnet",
        "deploy:testnet": "npx hardhat deploy --network testnet",
        "deploy:localhost": "npx hardhat deploy --network localhost",
        "lint": "node_modules/.bin/tslint --config tslint.json \"{src,test}/**/*.ts\"",
        "lint-fix": "node_modules/.bin/tslint --fix --config tslint.json \"{src,test}/**/*.ts\"",
        "prettier": "node_modules/.bin/prettier --write --config .prettierrc 'contracts/**/*.{json,sol,ts,js,md}' 'src/**/*.{json,sol,ts,js,md}' 'test/**/*.{json,sol,ts,js,md}'",
        "docgen": "hardhat docgen"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bosagora/payment-contract-boa.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": ""
    },
    "homepage": "",
    "devDependencies": {
        "@ethersproject/experimental": "^5.6.3",
        "@nomiclabs/hardhat-ethers": "^2.2.1",
        "@nomiclabs/hardhat-waffle": "^2.0.2",
        "@nomiclabs/hardhat-web3": "^2.0.0",
        "@openzeppelin/contracts": "^4.8.2",
        "@typechain/ethers-v5": "^10.1.0",
        "@typechain/hardhat": "^6.1.2",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "^12.20.43",
        "assert": "^2.0.0",
        "chai": "^4.3.6",
        "chai-http": "^4.3.0",
        "dotenv": "^10.0.0",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.6.9",
        "hardhat": "^2.12.7",
        "hardhat-deploy": "^0.9.26",
        "hardhat-gas-reporter": "^1.0.7",
        "mocha": "10.1.0",
        "prettier": "^2.5.1",
        "prettier-plugin-solidity": "^1.1.1",
        "solhint": "^3.3.6",
        "solidity-coverage": "^0.8.2",
        "solidity-docgen": "^0.6.0-beta.35",
        "ts-node": "^10.5.0",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typechain": "^8.1.0",
        "typescript": "^4.5.5",
        "web3": "^1.7.4"
    }
}
