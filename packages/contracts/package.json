        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-typescript": "^8.3.1",
        "@typechain/ethers-v5": "^10.1.0",
        "@typechain/hardhat": "^6.1.2",
        "@types/chai": "^4.3.5",
        "@types/mocha": "^10.0.0",
        "@types/node": "^12.20.43",
        "assert": "^2.0.0",
        "chai": "^4.3.7",
        "chai-http": "^4.3.7",
        "dotenv": "^10.0.0",
        "ethereum-waffle": "^4.0.10",
