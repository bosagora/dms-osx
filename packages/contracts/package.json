{
    "name": "dms-osx-artifacts",
    "version": "1.1.10",
    "description": "Smart contracts that decentralized point systems",
    "files": [
        "**/*.sol"
    ],
    "scripts": {
        "test": "hardhat test",
        "clean": "hardhat clean",
        "build": "hardhat compile",
        "build:npm": "rollup --config rollup.config.ts",
        "deploy:hardhat": "hardhat deploy",
        "deploy:mainnet": "hardhat deploy --network bosagora_mainnet",
        "deploy:testnet": "hardhat deploy --network bosagora_testnet",
        "deploy:devnet": "hardhat deploy --network bosagora_devnet",
        "lint": "tslint --config tslint.json \\\"{src,test}/**/*.ts\\\"",
        "lint-fix": "tslint --fix --config tslint.json \\\"{src,test}/**/*.ts\\\"",
        "formatting:check": "prettier '**/*.{json,sol,ts,js,md}' -c",
        "formatting:write": "prettier '**/*.{json,sol,ts,js,md}' --write",
        "docgen": "hardhat docgen",
        "test:Validator": "hardhat test test/00-ValidatorCollection.test.ts",
        "test:CurrencyRate": "hardhat test test/01-CurrencyRate.test.ts",
        "test:ShopCollection": "hardhat test test/02-ShopCollection.test.ts",
        "test:Ledger": "hardhat test test/03-Ledger.test.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bosagora/dms-osx.git"
    },
