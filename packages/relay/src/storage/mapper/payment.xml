<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="payment">

    <insert id="postPayment">
        INSERT INTO payments
            (
                "paymentId"         ,
                "purchaseId"        ,
                "amount"            ,
                "currency"          ,
                "shopId"            ,
                "account"           ,
                "loyaltyType"       ,
                "paidPoint"         ,
                "paidToken"         ,
                "paidValue"         ,
                "feePoint"          ,
                "feeToken"          ,
                "feeValue"          ,
                "totalPoint"        ,
                "totalToken"        ,
                "totalValue"        ,
                "paymentStatus"     ,
                "createTimestamp"   ,
                "cencelTimestamp"
            )
        VALUES
            (
                #{paymentId},
                #{purchaseId},
                #{amount},
                #{currency},
                #{shopId},
                #{account},
                ${loyaltyType},
                #{paidPoint},
                #{paidToken},
                #{paidValue},
                #{feePoint},
                #{feeToken},
                #{feeValue},
                #{totalPoint},
                #{totalToken},
                #{totalValue},
                ${paymentStatus},
                ${createTimestamp},
                0
            )
        ON CONFLICT ("paymentId")  DO NOTHING;
    </insert>

    <select id="getPayment">
        SELECT * FROM payments WHERE "paymentId" = #{paymentId};
    </select>

    <update id="updateStatus">
        UPDATE payments
        SET
            "paymentStatus" = #{paymentStatus}
        WHERE "paymentId" = #{paymentId}
    </update>

    <update id="updateCancelTimestamp">
        UPDATE payments
        SET
            "cencelTimestamp" = #{cancelTimestamp}
        WHERE "paymentId" = #{paymentId}
    </update>
</mapper>
